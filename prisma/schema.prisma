generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("CHALLENGE_DATABASE_URL")
}

model Event {
  id                        String    @id @default(auto()) @map("_id") @db.ObjectId
  event_id                  Int       @unique @map("event_id")
  name                      String
  deadline_time             DateTime
  release_time              DateTime?
  average_entry_score       Int?
  finished                  Boolean?
  data_checked              Boolean?
  highest_scoring_entry     Int?
  deadline_time_epoch       BigInt?
  deadline_time_game_offset Int?
  highest_score             Int?
  is_previous               Boolean?
  is_current                Boolean?
  is_next                   Boolean?
  cup_leagues_created       Boolean?
  h2h_ko_matches_created    Boolean?
  can_enter                 Boolean?
  can_manage                Boolean?
  released                  Boolean?
  ranked_count              Int?
  chip_plays                String[]  @default([])
  most_selected             Int?
  most_transferred_in       Int?
  top_element               Int?
  top_element_info          Json?
  transfers_made            Int?
  most_captained            Int?
  most_vice_captained       Int?
  update_at                 DateTime  @updatedAt

  @@map("event")
}

model Phase {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  phase_id    Int      @unique @map("phase_id")
  name        String?
  start_event Int?
  stop_event  Int?
  update_at   DateTime @updatedAt

  @@map("phase")
}
