{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": ["eslint:recommended", "plugin:node/recommended"],
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "node/no-unsupported-features/es-syntax": [
      "error",
      {
        "version": ">=14.0.0",
        "ignores": ["modules"]
      }
    ]
  }
}
